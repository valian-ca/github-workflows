{
  extends: ["config:recommended", "schedule:earlyMondays", ":semanticCommits", ":semanticCommitTypeAll(chore)"],
  labels: ["dependencies"],
  packageRules: [
    {
      matchManagers: ["github-actions"],
      groupName: "GitHub Actions Dependencies",
      matchPackageNames: ["/.*/"],
    },
    {
      matchManagers: ["npm"],
      groupName: "Node-based Dev Tools",
      matchPackageNames: ["/.*/"],
    },
    {
      matchPackageNames: ["node"],
      groupName: "Node.js",
      allowedVersions: "<21.0.0",
    },
  ],
}
